<div class="row">
  <div class="col-md-12">
    <%= form_for([current_user, @exercise], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @exercise.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@exercise.errors.count, "error") %>
              prohibited this article from being saved:
            </h2>
            <div class="panel-body">
              <ul>
                <% @exercise.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :duration_in_min, "Duration (min)" %>
        </div>
        <div class="col-md-10">
          <%= f.number_field :duration_in_min, class: 'form-control'%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :workout, "Workout details" %>
        </div>
        <div class="col-md-10">
          <%= f.text_area :workout, rows: 10, class: 'form-control', placeholder: "Workout details", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :workout_date, "Activity date" %>
        </div>
        <div class="col-md-2">
          <%= f.date_field :workout_date,  class: 'form-control', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
